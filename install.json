{
  "run": [
    {
      "method": "shell.run",
      "params": {
        "message": [
          "git clone https://github.com/Paxurux/chatter-box-dubbing.git app"
        ]
      }
    },
    {
      "method": "script.start",
      "params": {
        "uri": "torch.js",
        "params": {
          "path": "app",
          "venv": "venv",
          "xformers": false,
          "triton": false,
          "sageattention": false
        }
      }
    },
    {
      "method": "shell.run",
      "params": {
        "venv": "venv",
        "path": "app",
        "chain": true,
        "input": null,
        "message": [
          "uv pip install -r requirements.txt",
          "uv pip install --upgrade pip",
          "uv pip install chatterbox-tts --no-deps --force-reinstall"
        ]
      }
    }
  ]
}